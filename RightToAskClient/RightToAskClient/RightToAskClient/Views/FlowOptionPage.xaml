<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:RightToAskClient.ViewModels"
             x:Class="RightToAskClient.Views.FlowOptionPage"
             Title="Who Should Answer?">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Padding="30">
            <Frame Style="{StaticResource InvisibleButtonFrame}">
                <Grid RowDefinitions="*,*,*">
                    <StackLayout Grid.Row="0" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                        <Label Text="Option A" HorizontalOptions="Center" VerticalOptions="Center" FontSize="Large"/>
                        <Label Text="Question in the app" HorizontalOptions="Center" VerticalOptions="Center" FontSize="Large"/>
                    </StackLayout>
                    <Label Grid.Row="1" Text="Public in the app" HorizontalOptions="Center" VerticalOptions="Center"/>
                    <Label Grid.Row="2" Text="MP (mainly)" HorizontalOptions="Center" VerticalOptions="Start"/>
                    <Button Grid.RowSpan="3" Style="{StaticResource TransparentSquareButton}" 
                    Command="{Binding AnsweredByMyMPCommand}" BorderColor="{StaticResource Primary}"/>
                </Grid>
            </Frame>
            <Frame Style="{StaticResource InvisibleButtonFrame}">
                <Grid RowDefinitions="*,*,*">
                    <StackLayout Grid.Row="0" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                        <Label Text="Option B" HorizontalOptions="Center" VerticalOptions="Center" FontSize="Large"/>
                        <Label Text="to raise in Parliament" HorizontalOptions="Center" VerticalOptions="Center" FontSize="Large"/>
                    </StackLayout>
                    <Label Grid.Row="1" Text="Who should answer it" HorizontalOptions="Center" VerticalOptions="Center"/>
                    <Label Grid.Row="2" Text="Who should raise it" HorizontalOptions="Center" VerticalOptions="Start"/>
                    <Button Grid.RowSpan="3" Style="{StaticResource TransparentSquareButton}"
                    Command="{Binding OptionBCommand}" BorderColor="{StaticResource Primary}"/>
                </Grid>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>