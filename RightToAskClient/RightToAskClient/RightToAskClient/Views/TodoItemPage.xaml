<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
			 x:Class="RightToAskClient.Views.TodoItemPage" 
			 Title="Todo">
	<StackLayout Margin="20">
		<Label Text="UID" />
		<Entry Text="{Binding Path=uid}" 
               Placeholder="Enter UserID" />
		<Label Text="Display name" />
		<Entry Text="{Binding Path=display_name}"
               Placeholder="Enter display name" />
		<Label Text="Public Key" />
		<Entry Text="{Binding Path=public_key}"
               Placeholder="Enter key" />
		<Label Text="State" />
		<Entry Text="{Binding Path=state}"
               Placeholder="Enter state" />
		<Label x:Name="reportLabel" Text="Done" />
		<Button Text="Save" 
                Clicked="OnSaveButtonClicked" />
		<Button Text="Cancel" 
                 Clicked="OnCancelButtonClicked" />
	</StackLayout>
</ContentPage>
