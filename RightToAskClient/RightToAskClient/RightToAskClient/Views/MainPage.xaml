<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resx="clr-namespace:RightToAskClient.Resx"
             xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
             xmlns:vm="clr-namespace:RightToAskClient.ViewModels"
             xmlns:local="clr-namespace:RightToAskClient"
			 x:Class="RightToAskClient.Views.MainPage"
			 Title="{xct:Translate ApplicationTitle}"
             Shell.FlyoutBehavior="Flyout">
    <ContentPage.BindingContext>
        <vm:MainPageViewModel/>
    </ContentPage.BindingContext>
        <ContentPage.Content>
        <StackLayout VerticalOptions="FillAndExpand" Margin="10">
            <Label Text="Make your political questions have an impact" Style="{StaticResource Header1}" HorizontalTextAlignment="Center"/>
            <BoxView />
            <Grid RowDefinitions="auto,*,*,*" ColumnDefinitions="*,*,*,*,*" VerticalOptions="FillAndExpand">
                <StackLayout Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="5" Margin="0" Padding="0" Spacing="0">
                    <Label Text="{xct:Translate MainPageSubheader1Text}" Style="{StaticResource CenterSmall}"/>
                    <Label Text="{xct:Translate MainPageSubheader2Text}" Style="{StaticResource CenterSmall}"/>
                    <Label Text="{xct:Translate MainPageSubheader3Text}" Style="{StaticResource CenterSmall}"/>
                </StackLayout>
                <StackLayout Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" Grid.RowSpan="3" VerticalOptions="FillAndExpand">
                    <StackLayout VerticalOptions="CenterAndExpand" Spacing="20">
                        <Frame Style="{StaticResource SubtleFrame}" HeightRequest="115">
                            <Grid RowDefinitions="*,*">
                                <Label Grid.Row="0" Text="{xct:Translate SearchBarTitle}" Style="{StaticResource Header1}" Padding="10"/>
                                <StackLayout Grid.Row="1" Orientation="Horizontal" Padding="0" Margin="0" Spacing="0" HorizontalOptions="Start">
                                    <SearchBar Placeholder="{xct:Translate SearchBarPlaceholderText}" Style="{StaticResource GreenSearchBar}"
                                            Text="{Binding SearchText}" HorizontalOptions="Start" SearchCommand="{Binding ExpiringSoonButtonCommand}" WidthRequest="150"/>
                                    <BoxView WidthRequest="2" Color="{StaticResource FrameColor}"/>
                                    <Button Text="{xct:Translate AdvancedSearchButtonText}" Command="{Binding AdvancedSearchButtonCommand}"
                                            Style="{StaticResource GreenButton}" CornerRadius="0" WidthRequest="90" FontSize="Micro"/>
                                </StackLayout>
                            </Grid>
                        </Frame>
                        <Frame Style="{StaticResource SubtleFrame}" HeightRequest="115">
                            <Grid RowDefinitions="*,*,*" ColumnDefinitions="*,*">
                                <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" 
                                       Text="{xct:Translate TrendingNowButtonText}" Style="{StaticResource Header1}" HorizontalTextAlignment="Center"
                                       AutomationProperties.IsInAccessibleTree="True" AutomationProperties.Name="{xct:Translate MainPageTrendingNowAccessibilityLabelName}"
                                       AutomationProperties.HelpText="{xct:Translate MainPageTrendingNowAccessibilityLabelHelpText}"/>
                                <Image x:Name="glassesImage" Grid.Row="1" Grid.Column="0" Source="{local:ImageResource RightToAskClient.Images.glasses.png}" 
                                       xct:IconTintColorEffect.TintColor="{StaticResource Primary}" WidthRequest="50" HorizontalOptions="Center"
                                       AutomationProperties.IsInAccessibleTree="True" AutomationProperties.Name="{xct:Translate GlassesImageAccessibilityNameText}"
                                       AutomationProperties.HelpText="{xct:Translate GlassesImageAccessibilityHelpText}"/>
                                <Image x:Name="checkboxImage" Grid.Row="1" Grid.Column="1" Source="{local:ImageResource RightToAskClient.Images.checkmark_box.png}" 
                                       xct:IconTintColorEffect.TintColor="{StaticResource Primary}" WidthRequest="50" HorizontalOptions="Center"
                                       AutomationProperties.IsInAccessibleTree="True" AutomationProperties.Name="{xct:Translate VoteImageAccessibilityNameText}"
                                       AutomationProperties.HelpText="{xct:Translate VoteImageAccessibilityHelpText}"/>
                                <Label Grid.Row="2" Grid.Column="0" Text="{xct:Translate ReadFrameSubtext}" Style="{StaticResource StagnantColor}" HorizontalOptions="Center" HorizontalTextAlignment="Center" VerticalOptions="Start"/>
                                <Label Grid.Row="2" Grid.Column="1" Text="{xct:Translate VoteFrameSubtext}" Style="{StaticResource StagnantColor}" HorizontalOptions="Center" HorizontalTextAlignment="Center" VerticalOptions="Start"/>
                                <Button Grid.Row="0" Grid.RowSpan="3" Grid.ColumnSpan="2" Style="{StaticResource TransparentSquareButton}" 
                                        Command="{Binding Top10ButtonCommand}" BorderColor="{StaticResource Primary}"
                                        AutomationProperties.LabeledBy="{x:Reference glassesImage}"/>
                            </Grid>
                        </Frame>
                        <Frame Style="{StaticResource SubtleFrame}" HeightRequest="115">
                            <Grid RowDefinitions="*,*">
                                <StackLayout Grid.Row="0" Grid.RowSpan="2">
                                    <Label Text="{xct:Translate MainPageHeader2Text}" Style="{StaticResource Header1}" Margin="0,10,0,0"/>
                                    <Image x:Name="draftImage" Margin="0" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" xct:IconTintColorEffect.TintColor="{StaticResource Primary}"
                                           Source="{local:ImageResource RightToAskClient.Images.question_draft_resized.png}" WidthRequest="75"
                                           AutomationProperties.IsInAccessibleTree="True" AutomationProperties.Name="{xct:Translate DraftImageAccessibilityNameText}"
                                           AutomationProperties.HelpText="{xct:Translate DraftImageAccessibilityHelpText}"/>
                                </StackLayout>
                                <Button Grid.Row="0" Grid.RowSpan="2" Style="{StaticResource TransparentSquareButton}" 
                                        Command="{Binding DraftingButtonCommand}" BorderColor="{StaticResource Primary}" 
                                        AutomationProperties.LabeledBy="{x:Reference draftImage}">
                                </Button>
                            </Grid>
                        </Frame>
                    </StackLayout>
                </StackLayout>
            </Grid>
        </StackLayout>        
	</ContentPage.Content>
</ContentPage>
