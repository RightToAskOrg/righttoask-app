<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resx="clr-namespace:RightToAskClient.Resx"
             xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
			 x:Class="RightToAskClient.Views.MainPage"
			 Title="{xct:Translate ApplicationTitle}">
	<ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" Spacing="40">
            <Frame Style="{StaticResource NavajoWhiteFrame}">
			    <StackLayout Style="{StaticResource VertStack}">
                    <Label Text="{xct:Translate MainPageHeaderText}" Style="{StaticResource Header1}" />
                    <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
                        <Button x:Name="Top10NowButton" Text="{xct:Translate TrendingNowButtonText}" Style="{StaticResource TurquoiseButton}" HeightRequest="50" Clicked="OnTop10NowButtonClicked" HorizontalOptions="Center"/>
                        <Button x:Name="ExpiringSoonButton" Text="{xct:Translate ExpiringSoonButtonText}" Style="{StaticResource TurquoiseButton}" Clicked="OnExpiringSoonButtonClicked" HorizontalOptions="Center"/>
			        </StackLayout>
                    <StackLayout Orientation="Horizontal" HorizontalOptions="Start">
                        <SearchBar x:Name="ReadByKeywordButton" Placeholder="{xct:Translate SearchBarPlaceholderText}" Style="{StaticResource TurquoiseSearcbar}" SearchButtonPressed="OnReadByKeywordFieldCompleted" TextChanged="OnKeywordChanged" HorizontalOptions="Start"/>
                        <Button x:Name="ReadButton" Text="{xct:Translate AdvancedSearchButtonText}" Clicked="OnReadButtonClicked" Style="{StaticResource TurquoiseButton}" HeightRequest="50"/>
                    </StackLayout>
                </StackLayout>
			</Frame>
            <Frame Style="{StaticResource NavajoWhiteFrame}">
			    <StackLayout Style="{StaticResource VertStack}">
                    <Label Text="{xct:Translate MainPageHeader2Text}" Style="{StaticResource Header1}" />
				    <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                        <Button x:Name="NavigateButton" Text="{xct:Translate StartDraftingButtonText}" Style="{StaticResource TurquoiseButton}" HeightRequest="50" Clicked="OnNavigateButtonClicked" HorizontalOptions="Center"/>
				    </StackLayout>
			</StackLayout>
			</Frame>	
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
