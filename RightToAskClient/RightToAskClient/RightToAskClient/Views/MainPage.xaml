<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resx="clr-namespace:RightToAskClient.Resx"
             xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
             xmlns:vm="clr-namespace:RightToAskClient.ViewModels"
             xmlns:local="clr-namespace:RightToAskClient"
			 x:Class="RightToAskClient.Views.MainPage"
			 Title="{xct:Translate ApplicationTitle}"
             Shell.FlyoutBehavior="Flyout">
    <ContentPage.BindingContext>
        <vm:MainPageViewModel/>
    </ContentPage.BindingContext>
        <ContentPage.Content>
        <StackLayout VerticalOptions="FillAndExpand" Margin="10">
            <Label Text="Make your political questions have an impact" Style="{StaticResource Header1}" HorizontalTextAlignment="Center"/>
            <BoxView />
            <Grid RowDefinitions="auto,*,*,*" ColumnDefinitions="*,*,*,*,*" VerticalOptions="FillAndExpand">
                <StackLayout Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="5" Margin="0" Padding="0" Spacing="0">
                    <Label Text="Read and upvote questions" Style="{StaticResource CenterSmall}"/>
                    <Label Text="Write your own questions" Style="{StaticResource CenterSmall}"/>
                    <Label Text="Help other citizens direct their questions" Style="{StaticResource CenterSmall}"/>
                </StackLayout>
                <StackLayout Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" Grid.RowSpan="3" VerticalOptions="FillAndExpand">
                    <StackLayout VerticalOptions="CenterAndExpand" Spacing="20">
                        <Frame Style="{StaticResource SubtleFrame}" HeightRequest="115" Padding="10">
                            <StackLayout VerticalOptions="Center">
                                <Label Text="Search" Style="{StaticResource Header1}"/>
                                <StackLayout Orientation="Horizontal" HorizontalOptions="Start">
                                    <SearchBar Placeholder="{xct:Translate SearchBarPlaceholderText}" Style="{StaticResource GreenSearchBar}" 
                                   Text="{Binding SearchText}" HorizontalOptions="Start" SearchCommand="{Binding ExpiringSoonButtonCommand}"/>
                                    <Button Text="{xct:Translate AdvancedSearchButtonText}" Command="{Binding AdvancedSearchButtonCommand}" 
                                Style="{StaticResource GreenButton}" HeightRequest="60" WidthRequest="100" CornerRadius="0"/>
                                </StackLayout>
                            </StackLayout>
                        </Frame>
                        <Frame Style="{StaticResource SubtleFrame}" HeightRequest="115">
                            <Grid RowDefinitions="*,*,*" ColumnDefinitions="*,*">
                                <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" 
                                       Text="{xct:Translate TrendingNowButtonText}" Style="{StaticResource Header1}" HorizontalTextAlignment="Center"
                                       AutomationProperties.IsInAccessibleTree="True" AutomationProperties.Name="Main Page Label"
                                       AutomationProperties.HelpText="This is the main header for the page and application in general"/>
                                <Image Grid.Row="1" Grid.Column="0" Source="{local:ImageResource RightToAskClient.Images.glasses.png}" WidthRequest="50" HorizontalOptions="Center"/>
                                <Image Grid.Row="1" Grid.Column="1" Source="{local:ImageResource RightToAskClient.Images.checkmark_box.png}" WidthRequest="50" HorizontalOptions="Center"/>
                                <!--<Button Grid.Row="1" Grid.Column="0" Text="{xct:Translate TrendingNowButtonText}" Style="{StaticResource GreenButton}" HeightRequest="50" 
                                Command="{Binding Top10ButtonCommand}" HorizontalOptions="Center"/>
                                <Button Grid.Row="1" Grid.Column="1" Text="{xct:Translate ExpiringSoonButtonText}" Style="{StaticResource GreenButton}" 
                                Command="{Binding ExpiringSoonButtonCommand}" HorizontalOptions="Center"/>-->
                                <Label Grid.Row="2" Grid.Column="0" Text="Read" HorizontalOptions="Center" HorizontalTextAlignment="Center" VerticalOptions="Start"/>
                                <Label Grid.Row="2" Grid.Column="1" Text="Vote" HorizontalOptions="Center" HorizontalTextAlignment="Center" VerticalOptions="Start"/>
                                <Button Grid.Row="0" Grid.RowSpan="3" Grid.ColumnSpan="2" Style="{StaticResource TransparentSquareButton}" 
                                        Command="{Binding Top10ButtonCommand}" BorderColor="{StaticResource Primary}"/>
                            </Grid>
                        </Frame>
                        <Frame Style="{StaticResource SubtleFrame}" HeightRequest="115">
                            <Grid RowDefinitions="*,*">
                                <StackLayout Grid.Row="0" Grid.RowSpan="2">
                                    <Label Text="{xct:Translate MainPageHeader2Text}" Style="{StaticResource Header1}" Margin="0,10,0,0"/>
                                    <Image Margin="0" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" xct:IconTintColorEffect.TintColor="{StaticResource Primary}"
                                           Source="{local:ImageResource RightToAskClient.Images.question_draft_resized.png}" WidthRequest="75"/>
                                </StackLayout>                                
                                <Button Grid.Row="0" Grid.RowSpan="2" Style="{StaticResource TransparentSquareButton}" 
                                        Command="{Binding DraftingButtonCommand}" BorderColor="{StaticResource Primary}"/>
                            </Grid>
                        </Frame>
                    </StackLayout>
                </StackLayout>
            </Grid>
        </StackLayout>        
	</ContentPage.Content>
</ContentPage>
