<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:RightToAskClient.Models;assembly=RightToAskClient"
             xmlns:vm="clr-namespace:RightToAskClient.ViewModels;assembly=RightToAskClient"
             xmlns:generic="clr-namespace:System.Collections.Generic;assembly=netstandard"
             x:Class="RightToAskClient.Views.RegisterPage1"
             x:DataType="vm:Registration1ViewModel"
             Title="{Binding Title}">
    <ContentPage.BindingContext>
        <vm:Registration1ViewModel />
    </ContentPage.BindingContext>
	<ContentPage.Content >
		<StackLayout Margin="20">
			<Label Text="UID" Style="{StaticResource LeftSmall}"/>
			<Entry Text="{Binding Registration.uid}" Placeholder="Enter UserID" Style="{StaticResource NormalEntry}"/>
			<Label Text="Display name" Style="{StaticResource LeftSmall}"/>
			<Entry Text="{Binding Registration.display_name}" Placeholder="Enter display name" Style="{StaticResource NormalEntry}"/>
			<Label Text="State" Style="{StaticResource LeftSmall}"/>
			<Picker x:Name="stateOrTerritoryPicker" Title="{Binding Registration.State,  StringFormat='{0:F0}'}" 
			        BackgroundColor="Turquoise"
			        SelectedIndexChanged="OnStatePickerSelectedIndexChanged">
			</Picker>
			<Label Text="Electorates:" Style="{StaticResource LeftSmall}"/>
			<CollectionView ItemsSource="{Binding Registration.electorates}" SelectionMode="Single" SelectedItem="{Binding ElectoratesButtonCommand}">
				<CollectionView.ItemTemplate>
					<DataTemplate x:DataType="models:ElectorateWithChamber">
						<ViewCell>
							<StackLayout HorizontalOptions="StartAndExpand"
							             Orientation="Horizontal">
                                <Label Text="{Binding chamber }" Style="{StaticResource ListViewTextVertCenter}"/>
                                <Label Text="{Binding region}" Style="{StaticResource ListViewTextVertCenter}" />
							</StackLayout>
						</ViewCell>
					</DataTemplate>
				</CollectionView.ItemTemplate>
			</CollectionView>
			<Label x:Name="ReportLabel" Text="{Binding ReportLabelText}" Style="{StaticResource ReportLabel}"/>
			<StackLayout Orientation="Vertical" VerticalOptions="Center">
				<StackLayout Orientation="Horizontal" HorizontalOptions="Center">
					<Button Command="{Binding SaveButtonCommand}" Text="Complete Account Creation" Style="{StaticResource DoneButton}" HorizontalOptions="Center"/>
				</StackLayout>
			</StackLayout>
			<StackLayout Orientation="Horizontal" VerticalOptions="Center">
                <Button Text="{Binding RegisterMPButtonText}" Command="{Binding RegisterMPButtonCommand}" IsVisible="{Binding ShowRegisterMPButton}" Style="{StaticResource DoneButton}" HorizontalOptions="Center"/>
                <Button Text="{Binding RegisterOrgButtonText}" Command="{Binding RegisterOrgButtonCommand}" IsVisible="{Binding ShowRegisterOrgButton}" Style="{StaticResource DoneButton}" HorizontalOptions="Center"/>
			<Button Text="Cancel" Command="{Binding CancelButtonCommand}" IsVisible="{Binding ShowDoneButton}"/>
			</StackLayout>
            <Button Style="{StaticResource TurquoiseButton}" Text="Follow" Command="{Binding FollowButtonCommand}" IsVisible="{Binding ShowFollowButton}" HorizontalOptions="Center"/>
            <Button Style="{StaticResource TurquoiseButton}" Text="{Binding SeeQuestionsButtonText}" IsVisible="{Binding ShowSeeQuestionsButton}" Command="{Binding SeeQuestionsButtonCommand}" HorizontalOptions="Center"/>
            <Button Style="{StaticResource TurquoiseButton}" Text="{Binding DMButtonText}" IsVisible="{Binding ShowDMButton}" Command="{Binding DMButtonCommand}" HorizontalOptions="Center"/>
		</StackLayout>
