<?xml version="1.0" encoding="UTF-8"?>

<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
             xmlns:models="clr-namespace:RightToAskClient.Models"
             xmlns:vm="clr-namespace:RightToAskClient.ViewModels"
             xmlns:controls="clr-namespace:RightToAskClient.Views.Controls;assembly=RightToAskClient"
             x:Class="RightToAskClient.Views.UserAccountInfoView"
             x:DataType="vm:RegistrationViewModel">
    <ContentView.Content>
        <StackLayout Orientation="Vertical"
                     VerticalOptions="Fill"
                     HorizontalOptions="Fill">
                <Label Text= "{xct:Translate DisplayNameHeaderText}"
                       Style="{StaticResource PickerTitle}"/>
                <controls:BorderlessEntry
                    Text="{Binding DisplayName}"
                    Placeholder="{xct:Translate DisplayNamePlaceholderText}"
                    Style="{StaticResource TextInput}"/>
                <BoxView
                    Margin="0,8,0,0"
                    Style="{StaticResource EntryBorder}" />
                <!-- <Button Text="{xct:Translate UpdateAccountButtonText}" Command="{Binding UpdateAccountButtonCommand}" -->
                <!--         Style="{StaticResource DoneButton}" IsVisible="{Binding ShowUpdateAccountButton}" /> -->
                <Label Text="{xct:Translate UserNameHeaderText}" 
                       Style="{StaticResource PickerTitle}" />
                <controls:BorderlessEntry
                    x:Name="UIDEntry"
                    Text="{Binding UserId}"
                    Placeholder="{xct:Translate UIDPlaceholderText}"
                    Style="{StaticResource TextInputReadOnly}"
                    IsReadOnly="True"/>
                <BoxView
                    Margin="0,8,0,0"
                    Style="{StaticResource EntryBorder}" />
            <Label Text="{Binding BadgesSummary, StringFormat='Registered MP account for {0}'}"
                   IsVisible="{Binding IsVerifiedMPAccount}" 
                   Style="{StaticResource NormalText}" />
            <!-- <Label Text="Verified staffer" IsVisible="{Binding IsVerifiedStafferAccount}" Style="{StaticResource NormalText}" /> -->
            <Label Text="{xct:Translate EditableElectoratesHeaderText}" 
                   Style="{StaticResource Header2}" />
            <!-- The height request is a kludge because otherwise the CollectionView takes up all the rest of the page -->
            <!-- rather than resizing to fit just the number of elements it has -->
            <!-- TODO Change to stacklayout as in QuestionDetailPage -->
            <CollectionView ItemsSource="{Binding Electorates}"
                            HeightRequest="280"
                            SelectionMode="Single"
                            SelectedItem="{Binding SelectedElectorateWithChamber}">
                <!-- <CollectionView ItemsSource="{Binding Registration.electorates}" SelectionMode="Single" SelectedItem="{Binding SelectedElectorateWithChamber}">-->
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:ElectorateWithChamber">
                        <StackLayout HorizontalOptions="StartAndExpand">
                            <Label Text="{Binding chamber}"
                                   Style="{StaticResource ClickableHeader}" />
                            <Label Text="{Binding region}"
                                   Style="{StaticResource NormalText}" />
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup Name="CommonStates">
                                    <VisualState Name="Normal" />
                                    <VisualState Name="Selected">
                                        <VisualState.Setters>
                                            <Setter Property="Background"
                                                    Value="{AppThemeBinding  Light={StaticResource WindowBackgroundColor}, 
                                                    Dark={StaticResource WindowBackgroundColorDark}}" />
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ContentView.Content>
</ContentView>