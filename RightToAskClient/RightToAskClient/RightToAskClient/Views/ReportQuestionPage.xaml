<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
             xmlns:vm="clr-namespace:RightToAskClient.ViewModels"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             xmlns:local="clr-namespace:RightToAskClient"
             xmlns:views="clr-namespace:RightToAskClient.Views;assembly=RightToAskClient"
             xmlns:helpers="clr-namespace:RightToAskClient.Helpers;assembly=RightToAskClient"
             Title="Report Question"
             x:Class="RightToAskClient.Views.ReportQuestionPage"
             x:DataType="vm:ReportQuestionViewModel"
             Style="{StaticResource SubPage}"
             ios:Page.UseSafeArea="true">

    <ContentPage.Resources>
        <ResourceDictionary>
            <ControlTemplate x:Key="ThemeRadioTemplate">
                <Frame x:Name="CheckFrame" 
                       Margin="0, 8, 0, 8"
                       Padding="0"
                       HasShadow="False" 
                       HorizontalOptions="Fill"
                       VerticalOptions="StartAndExpand">
                    <Grid VerticalOptions="StartAndExpand" HorizontalOptions="Fill">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="30" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0" HorizontalOptions="Start" VerticalOptions="Start">
                            <Ellipse Fill="White" 
                                     HeightRequest="18" 
                                     HorizontalOptions="Center" 
                                     Stroke="#Black"
                                     StrokeThickness="1" 
                                     VerticalOptions="Center"
                                     WidthRequest="18" />
                            <Ellipse x:Name="Check"
                                     BackgroundColor="Transparent"
                                     Fill="{StaticResource DarkGreen}" 
                                     HeightRequest="10"
                                     HorizontalOptions="Center" 
                                     StrokeThickness="0"
                                     VerticalOptions="Center" 
                                     WidthRequest="10" />
                        </Grid>
                        <!-- This enables us to put in dynamic content -->
                        <ContentPresenter Grid.Column="1"/>
                    </Grid>
                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroupList>
                            <VisualStateGroup x:Name="CheckedStates">
                                <VisualState x:Name="Checked">
                                    <VisualState.Setters>
                                        <Setter TargetName="Check" Property="Opacity" Value="1" />
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Unchecked">
                                    <VisualState.Setters>
                                        <Setter TargetName="Check" Property="Opacity" Value="0" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateGroupList>
                    </VisualStateManager.VisualStateGroups>
                </Frame>
            </ControlTemplate>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Shell.BackButtonBehavior>
        <BackButtonBehavior Command="{Binding BackCommand}"
                            IconOverride="{helpers:ImageResource RightToAskClient.Images.back.png}"
                            xct:SemanticEffect.Hint="{xct:Translate BackHint}"
                            xct:SemanticEffect.Description="{xct:Translate BackDescription}" />
    </Shell.BackButtonBehavior>
    <ContentPage.BindingContext>
        <vm:ReportQuestionViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout Orientation="Vertical"
                     VerticalOptions="Fill"
                     HorizontalOptions="Fill">
            <ScrollView VerticalOptions="StartAndExpand"
                        HorizontalOptions="Fill">
                <StackLayout Orientation="Vertical"
                             VerticalOptions="StartAndExpand"
                             HorizontalOptions="Fill"
                             Padding="16">
                    <CollectionView x:Name="QuestionList"
                                    ItemsSource="{Binding ReasonList}"
                                    SelectionMode="None">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="vm:ReportReason">
                                <RadioButton GroupName="Reasons"
                                             Value="{Binding ID}"
                                             IsChecked="{Binding Selected}"
                                             ControlTemplate="{StaticResource ThemeRadioTemplate}">
                                    <RadioButton.Content>
                                        <StackLayout Orientation="Vertical"
                                                     VerticalOptions="StartAndExpand"
                                                     HorizontalOptions="Fill">
                                            <!-- TODO: Use bindings -->
                                            <Label Text="Sharing personal information"
                                                   HorizontalOptions="Fill"
                                                   FontAttributes="Bold" />
                                            <Label
                                                Text="Sharing other peopleâ€™s private information without their consent."
                                                HorizontalOptions="Fill"
                                                VerticalOptions="End" />
                                        </StackLayout>
                                    </RadioButton.Content>
                                </RadioButton>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>
            </ScrollView>
            <BoxView Style="{StaticResource ButtonSeparator}" />
            <StackLayout Orientation="Vertical"
                         VerticalOptions="End"
                         HorizontalOptions="Fill"
                         Padding="10">
                <Button Text="{xct:Translate ReportSubmit}"
                        Style="{StaticResource NormalButton}"
                        CornerRadius="5" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>