	<style name="noPaddingButtonStyle" parent="@android:style/Widget.Button">
		<item name="android:padding">0dp</item>
		<item name="android:textAllCaps">false</item>
	</style>
	<style name="editorWithoutUnderline" parent="@android:style/Widget.EditText">
		<item name="android:background">@android:color/transparent</item>
		<item name="android:padding">10dp</item>
	</style>
	<style name="MainTheme" parent="MainTheme.Base">
		<!-- As of Xamarin.Forms 4.6 the theme has moved into the Forms binary -->
		<!-- If you want to override anything you can do that here. -->
		<!-- Underneath are a couple of entries to get you started. -->		
		<!-- Set theme colors from https://aka.ms/material-colors -->
		<!-- colorPrimary is used for the default action bar background -->
		<!--<item name="colorPrimary">#91CA47</item>-->
		<!-- colorPrimaryDark is used for the status bar -->
		<item name="colorPrimaryDark">#91CA47</item>
		<!-- colorAccent is used as the default value for colorControlActivated
         which is used to tint widgets -->
		<!--<item name="colorAccent">#FF4081</item>-->
		<!-- Top status bar area on Android -->
		<!-- <item name="android:statusBarColor">#a9a9a9</item> -->
		<item name="android:statusBarColor">#649b49</item>
		<item name="colorAccent">#9a4119</item>
		<item name="android:buttonStyle">@style/noPaddingButtonStyle</item>
		<item name="android:editTextStyle">@style/editorWithoutUnderline</item>
	</style>
</resources>