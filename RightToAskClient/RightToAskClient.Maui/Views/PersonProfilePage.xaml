<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RightToAskClient.Maui.Views.PersonProfilePage">
    <ContentPage.Content>
		<StackLayout Orientation="Vertical" HorizontalOptions="Center" VerticalOptions="Start">
			<ImageButton Source="https://openclipart.org/image/800px/258249"
			             BackgroundColor="Turquoise"
			             HorizontalOptions="Center"
			             VerticalOptions="CenterAndExpand" />	
			<Button x:Name="FollowButton" StyleClass="NormalButton" Text="Follow" Clicked="FollowButton_OnClicked" HorizontalOptions="Center"/>
			<Button x:Name="SeeQuestionsButton"  StyleClass="NormalButton" Clicked="SeeQuestionsButton_OnClicked" HorizontalOptions="Center"/>
			<Button x:Name="DMButton"  StyleClass="NormalButton" Clicked="DMButton_OnClicked" HorizontalOptions="Center"/>
		</StackLayout>
    </ContentPage.Content>
</ContentPage>